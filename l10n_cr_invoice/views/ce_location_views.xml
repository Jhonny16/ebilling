<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- sucursales, local o establecimiento -->

    <record id="view_location_form" model="ir.ui.view">
        <field name="name">ce.location.form</field>
        <field name="model">ce.location</field>
        <field name="arch" type="xml">
            <form string="Sucursal">
                <sheet string="Location">
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="active"/>
                        </group>
                        <group>
                            <field name="description"/>
                            <field name="code"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="view_location_tree" model="ir.ui.view">
        <field name="name">ce.location.form</field>
        <field name="model">ce.location</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="code"/>
                <field name="company_id" groups="base.group_multi_company"/>
            </list>
        </field>
    </record>
    <record id="action_location_form" model="ir.actions.act_window">
        <field name="name">Sucursal</field>
        <field name="res_model">ce.location</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">list,form</field>
        <field name="view_id" ref="view_location_tree"/>
    </record>

    <menuitem id="menu_sucursal" sequence="2" action="action_location_form" parent="ecf_setting_main"/>
</odoo>
