<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_voucher_type_form" model="ir.ui.view">
      <field name="name">ce.voucher.type.form</field>
      <field name="model">ce.voucher.type</field>
      <field name="arch" type="xml">
          <form>
              <sheet>
                  <group col="4">
                      <field name="name"/>
                      <field name="code"/>
                      <field name="internal_type"/>
                      <field name="move_type"/>
                  </group>
                  <group col="4">
                      <field name="active" widget="boolean_toggle"/>
                  </group>
              </sheet>
          </form>
      </field>
    </record>
    <record id="view_voucher_type_tree" model="ir.ui.view">
      <field name="name">ce.voucher.type.tree</field>
      <field name="model">ce.voucher.type</field>
      <field name="arch" type="xml">
          <list string="Voucher Type">
              <field name="name"/>
              <field name="code"/>
              <field name="internal_type"/>
          </list>
      </field>
    </record>
    <record id="action_voucher_type" model="ir.actions.act_window">
      <field name="name">Voucher Types</field>
      <field name="res_model">ce.voucher.type</field>
      <field name="type">ir.actions.act_window</field>
      <field name="view_mode">list,form</field>
    </record>
    <menuitem id="menu_voucher_type" parent="menu_electronic_invoice" sequence="5" action="action_voucher_type"/>
</odoo>
