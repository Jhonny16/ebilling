<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="mail_message_view_form_inherit" model="ir.ui.view">
        <field name="name">mail.message.view.form.inherit</field>
        <field name="model">mail.message</field>
        <field name="inherit_id" ref="mail.mail_message_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='recipients']" position="after">
                <page string="Adjuntos" name="attachment">
                    <field name="attachment_ids" widget="many2many_binary"/>
                </page>
            </xpath>
        </field>
    </record>
</odoo>