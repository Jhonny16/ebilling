<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_document_form" model="ir.ui.view">
        <field name="name">ce.document.form</field>
        <field name="model">ce.document</field>
        <field name="arch" type="xml">
            <form string="Document" create="0" duplicate="false" delete="0">
                <header>
                    <button name="action_gen_xml" type="object" string="Gen XML" class="oe_highlight"
                            invisible="xml_file != False"/>
                    <button name="action_send_to_hacienda" type="object" string="Enviar a Hacienda"
                            invisible="ind_state != 'not_sent'"
                            class="oe_highlight"/>
                    <button name="action_request_state_to_hacienda" type="object" string="Consultar a Hacienda"
                            invisible="ind_state not in ('recibido', 'procesando')"
                            class="oe_highlight"/>
                    <button name="action_send_mail" type="object" invisible="voucher_type_code == '07'"
                            string="Enviar Correo" class="oe_highlight"/>
                    <field name="ind_state" widget="statusbar" nolabel="1"
                           statusbar_visible="recibido,aceptado,rechazado,procesando,not_sent,error"/>
                </header>
                <sheet string="Document">
                    <!-- Invisible fields -->
                    <field name="is_ref" invisible="1"/>
                    <field name="voucher_type_code" invisible="1"/>

                    <div class="oe_title">
                        <h3>
                            <label for="name"/>
                            <field name="name" required="state != 'pending'"/>
                        </h3>
                    </div>
                    <group>
                        <group>
                            <field name="number"/>
                            <field name="invoice_id" invisible="not invoice_id"/>
                            <field name="voucher_type_id" options="{'no_open': True, 'no_create': True}"/>
                            <field name="invoice_type"/>
                            <field name="partner_id" invisible="not partner_id"/>
                            <field name="date_issue"/>
                            <field name="payment_term_type_id" readonly="1"/>
                            <field name="QR_code" widget="image" options="{'size': [150,150]}" nolabel="1"/>
                        </group>
                        <group>
                            <field name="location_id"
                                   invisible="not location_id and state != 'pending'"/>
                            <field name="terminal_id"
                                   invisible="not terminal_id and state != 'pending'"/>
                            <field name="state" invisible="True"/>
                            <field name="situation"/>
                            <field name="company_id" options="{'no_create': True}" groups="base.group_multi_company"/>
                            <field name="xml_file" readonly="0" filename="xml_file_name"/>
                            <field name="xml_file_name" readonly="1" invisible="1"/>
                            <field name="xml_mr_file" readonly="1" filename="xml_mr_file_name"
                                   invisible="not xml_mr_file_name"/>
                            <field name="xml_mr_file_name" readonly="1" invisible="1"/>
                            <field name="xml_amount_tax"/>
                            <field name="xml_amount_total"/>
                            <field name="currency_id"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Mensaje de Hacienda" invisible="not xml_mh_file">
                            <group>
                                <group>
                                    <field name="xml_mh_file" colspan="4" readonly="1" filename="xml_mh_file_name"/>
                                    <field name="xml_mh_file_name" readonly="1" invisible="1"/>
                                </group>
                                <field name="message_detail" readonly="1"/>
                            </group>
                        </page>
                        <page string="References" invisible="not is_ref">
                            <field name="ref_ids" readonly="True">
                                <list>
                                    <field name="name"/>
                                    <field name="ref_code"/>
                                    <field name="ref_reason"/>
                                    <field name="ref_doctype"/>
                                    <field name="ref_number"/>
                                    <field name="ref_date"/>
				                    <button type="object" name="action_view_document_reference" string="Show"/>
                                    <button type="object" name="action_download_file" string="Download"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <chatter reload_on_attachment="True"/>
            </form>
        </field>
    </record>
    <record id="view_document_tree" model="ir.ui.view">
        <field name="name">ce.document.tree</field>
        <field name="model">ce.document</field>
        <field name="arch" type="xml">
            <list string="Documentos" create="0" delete="0" duplicate="0">
                <field name="name"/>
                <field name="number"/>
                <field name="create_date" optional="hide"/>
                <field name="date_issue"/>
                <field name="voucher_type_id"/>
                <field name="partner_id"/>
                <field name="company_id" groups="base.group_multi_company" optional="hide"/>
                <field name="currency_id" optional="hide"/>
                <field name="xml_amount_tax" sum="Total Impuestos" widget="monetary"/>
                <field name="xml_amount_total" sum="Total Comprobante" widget="monetary"/>
                <field name="state_mail" widget="badge" decoration-success="state_mail == 'sent'"/>
                 <field name="ind_state" widget="badge" optional="show"
                       decoration-success="ind_state == 'aceptado'"
                       decoration-danger="ind_state == 'rechazado'"
                       decoration-info="ind_state == 'procesando'"/>
                <field name="state" optional="hide"/>
            </list>
        </field>
    </record>
    <record id="view_document_kanban" model="ir.ui.view">
        <field name="name">ce.document.kanban</field>
        <field name="model">ce.document</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile" sample="1" js_class="account_bills_kanban">
                <field name="name"/>
                <field name="number"/>
                <field name="create_date"/>
                <field name="partner_id"/>
                <field name="ind_state"/>
                <field name="xml_amount_tax"/>
                <field name="xml_amount_total"/>
                <field name="voucher_type_id"/>
                <field name="invoice_name"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                            <div class="row mb4">
                                <div class="col-6 o_kanban_record_headings">
                                    <strong>
                                        <span>
                                            <field name="voucher_type_id"/>
                                        </span>
                                    </strong>
                                </div>
                                <div class="col-6 text-right">
                                    <strong>
                                        <i class="fa fa-clock-o" aria-label="Date" role="img" title="Date"/>
                                        <t t-esc="record.create_date.value"/>
                                    </strong>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-12" id="invoice_name">
                                    <strong>
                                        <span>
                                            <field name="invoice_name"/>
                                        </span>
                                    </strong>
                                </div>
                                <div class="col-12">
                                    <span>
                                        <field name="number"/>
                                    </span>
                                </div>
                                <div class="col-12">
                                    <span>
                                        <field name="partner_id"/>
                                    </span>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-12">
                                    <span>Total:
                                        <field name="xml_amount_total" widget='monetary'/>
                                    </span>
                                </div>
                                <div class="col-12">
                                    <span>Tax:
                                        <field name="xml_amount_tax" widget='monetary'/>
                                    </span>
                                </div>
                                <div class="col-12">
                                    <span class="float-right">
                                        <field name="ind_state" widget="label_selection"
                                               options="{'classes': {'not_send': 'default', 'rechazado': 'danger', 'aceptado': 'success'}}"/>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
    <record id="ce_document_view_search" model="ir.ui.view">
        <field name="name">ce.document.view.search</field>
        <field name="model">ce.document</field>
        <field name="arch" type="xml">
            <search string="Document">
                <field name="name"/>
                <field name="number"/>
                <field name="partner_id"/>
                <filter name="ind_state" string="No Accepted" domain="[('ind_state', '!=', 'aceptado')]"/>
                <filter name="customer_document" string="Customer Document" domain="[('invoice_type', 'in', ('out_invoice', 'out_refund', 'out_ticket'))]"/>
                <filter name="supplier_document" string="Supplier Document" domain="[('invoice_type', 'in', ('in_invoice', 'in_refund', 'in_ticket'))]"/>
                <filter string="Create Date" name="create_date" date="create_date"/>
                <group expand="0" string="Group By">
                    <filter string="Voucher Type" name="filter_voucher_type_id" context="{'group_by': 'voucher_type_id'}"/>
                    <filter string="Condition Sale" name="filter_payment_term_type_id" context="{'group_by': 'payment_term_type_id'}"/>
                    <filter string="State" name="filter_ind_state" context="{'group_by': 'ind_state'}"/>
                </group>
            </search>
        </field>
    </record>
    <record id="action_document_form" model="ir.actions.act_window">
        <field name="name">Documentos Electronicos</field>
        <field name="res_model">ce.document</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">list,kanban,form</field>
        <field name="view_id" ref="view_document_tree"/>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Haga clic para agregar un documento.
            </p>
            <p>
                Una documento es un registro de la compañia al Ministerio de Hacienda
                que genera la facturación electrónica.
            </p>
        </field>
    </record>
    <record id="action_document_tree_view" model="ir.actions.act_window.view">
        <field eval="1" name="sequence"/>
        <field name="view_mode">list</field>
        <field name="view_id" ref="view_document_tree"/>
        <field name="act_window_id" ref="action_document_form"/>
    </record>
    <record id="action_document_kanban_view" model="ir.actions.act_window.view">
        <field eval="2" name="sequence"/>
        <field name="view_mode">kanban</field>
        <field name="view_id" ref="view_document_kanban"/>
        <field name="act_window_id" ref="action_document_form"/>
    </record>
    <record id="action_document_form_view" model="ir.actions.act_window.view">
        <field eval="3" name="sequence"/>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_document_form"/>
        <field name="act_window_id" ref="action_document_form"/>
    </record>
    <menuitem id="menu_hacienda" name="Hacienda" sequence="10" groups="account.group_account_manager" web_icon="l10n_cr_invoice,static/img/mh_logo2.png"/>
    <menuitem id="ecf_documents_main" name="Electronic Vouchers" parent="menu_hacienda"/>
    <menuitem id="menu_document_fe" sequence="1" action="action_document_form" parent="ecf_documents_main"/>
</odoo>
