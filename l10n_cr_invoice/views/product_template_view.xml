<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="product_template_form_view" model="ir.ui.view">
        <field name="name">product.template.common.form</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='product_tooltip']" position="before">
                <field name="l10n_cr_code_type_id" options="{'no_create': True}" invisible="fiscal_country_codes != 'CR'"/>
                <field name="l10n_sv_tariff_item" invisible="'CR' not in fiscal_country_codes"/>
            </xpath>
        </field>
    </record>
</odoo>
