<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="view_payment_term_type_form" model="ir.ui.view">
		<field name="name">ce.payment.term.type.form</field>
		<field name="model">ce.payment.term.type</field>
		<field name="arch" type="xml">
			<form string="Condition Sale">
				<sheet>
					<group col="4">
						<field name="name"/>
						<field name="code"/>
						<field name="active"/>
					</group>
				</sheet>
			</form>
		</field>
	</record>
	<record id="view_payment_term_type_tree" model="ir.ui.view">
		<field name="name">ce.payment.term.type.tree</field>
		<field name="model">ce.payment.term.type</field>
		<field name="arch" type="xml">
			<list string="Condition Sale">
				<field name="name"/>
				<field name="code"/>
				<field name="active" widget="boolean_toggle"/>
			</list>
		</field>
	</record>
	<record id="action_payment_term_type" model="ir.actions.act_window">
		<field name="name">Condition Sale</field>
		<field name="res_model">ce.payment.term.type</field>
		<field name="type">ir.actions.act_window</field>
		<field name="view_mode">list,form</field>
	</record>
	<menuitem id="menu_payment_term_type" parent="menu_electronic_invoice" sequence="2" action="action_payment_term_type"/>
</odoo>
