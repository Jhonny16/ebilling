<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="l10n_cr_terminal_validate_wizard_form" model="ir.ui.view">
        <field name="name">l10n.cr.terminal.validate.wizard.form</field>
        <field name="model">l10n_cr.terminal.validate_wizard</field>
        <field name="arch" type="xml">
            <form>
                <field name="terminal_id" invisible="1"/>
                <div class="alert alert-warning" role="alert">
                    <span class="fa fa-warning fa-lg" title="Warning" aria-label="Warning"/>
                    <br/>
                    <field name="name" readonly="1"/>
                </div>
                <footer>
                    <button name="confirm_cancel" string="Accept" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-default" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
    <record id="l10n_cr_terminal_validate_wizard_action" model="ir.actions.act_window">
        <field name="name">Terminal</field>
        <field name="target">new</field>
        <field name="view_mode">form</field>
        <field name="res_model">l10n_cr.terminal.validate_wizard</field>
    </record>
</odoo>
