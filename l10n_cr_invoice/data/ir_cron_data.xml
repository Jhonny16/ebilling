<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <record id="cron_consulta_hacienda" model="ir.cron">
            <field name="name">CR: Enviar FE Hacienda</field>
            <field name="model_id" ref="model_ce_document" />
            <field name="state">code</field>
            <field name="code">model._send_xml_to_MH(max_doc=10)</field>
            <field name="interval_number">5</field>
            <field name="interval_type">minutes</field>
            <field name="active">True</field>
        </record>
        <record id="cron_valida_hacienda" model="ir.cron">
            <field name="name">CR: Consultar Facturas Hacienda</field>
            <field name="model_id" ref="model_ce_document" />
            <field name="state">code</field>
            <field name="code">model._send_request_to_MH(max_doc=10, max_dias=1)</field>
            <field name="interval_number">5</field>
            <field name="interval_type">minutes</field>
            <field name="active">True</field>
        </record>
        <record id="cron_valida_hacienda_error" model="ir.cron">
            <field name="name">CR: Consultar Facturas Hacienda con Error</field>
            <field name="model_id" ref="model_ce_document" />
            <field name="state">code</field>
            <field name="code">model._send_request_to_MH(max_doc=10, tipo=['error'])</field>
            <field name="interval_number">60</field>
            <field name="interval_type">minutes</field>
            <field name="active">True</field>
        </record>
        <record id="cron_send_mails" model="ir.cron">
            <field name="name">CR: Envio Email a clientes</field>
            <field name="model_id" ref="model_ce_document" />
            <field name="state">code</field>
            <field name="code">model._send_mail(max_mails=1)</field>
            <field name="interval_number">5</field>
            <field name="interval_type">minutes</field>
            <field name="active">True</field>
        </record>
	    <record id="ir_cron_check_certificate" forcecreate="True" model="ir.cron">
            <field name="name">CR: Electronic Certificate Expiry Notification(Costa Rica)</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>            
            <field name="priority" eval="20" />
            <field name="model_id" ref="model_cr_ce_setting" />
            <field name="nextcall" eval="DateTime.now().strftime('%Y-%m-%d %H:00:00')" />
            <field name="state">code</field>
            <field name="code">model.action_email_notification()</field>
        </record>
    </data>
</odoo>
