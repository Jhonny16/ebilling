<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- QWeb Reports -->
        <record id="paperformat_rollo" model="report.paperformat">
            <field name="name">Hoja en rollo</field>
            <field name="default" eval="True"/>
            <field name="format">custom</field>
            <field name="page_height">500</field>
            <field name="page_width">80</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">2</field>
            <field name="margin_bottom">2</field>
            <field name="margin_left">4</field>
            <field name="margin_right">4</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">0</field>
        </record>
        <record id="account_invoices_rollo" model="ir.actions.report">
            <field name="name">Ticket</field>
            <field name="model">account.move</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">l10n_cr_invoice.ai_rollo_payment</field>
            <field name="report_file">l10n_cr_invoice.ai_rollo_payment</field>
            <field name="print_report_name">(object._get_report_base_filename())</field>
            <field name="paperformat_id" ref="l10n_cr_invoice.paperformat_rollo"/>
            <field name="binding_model_id" ref="account.model_account_move"/>
            <field name="binding_type">report</field>
        </record>
    </data>
</odoo>
